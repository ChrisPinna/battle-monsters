<h1><%=@player1_name%> VS <%=@player2_name%></h1> 

<style>
div {
  background-color: lightgreen;
  width: 120px;
  border: 2px solid green;
  padding: 5px;
  margin: 30px;
  text-align: center;
}
</style>

<div style="float:right"> <%=@player1_name%>: HP <%=@player1_hp%>/10 </div>
<div style="float:left";><%=@player2_name%>: HP <%=@player2_hp%>/10 </div>

<form action="/attack" method="post">
  <input type="submit" value="Attack">
</form>


<% if @attacked %>
<p> <%=@player2_name%> has attacked <%=@player1_name%> </p>
<form action="/player1turn" method="post">
  <input type="submit" value="<%=@player1_name%>'s Turn">
</form>
<%end%>

<% if @player1_hp == 0 %>
<p> <%=@player2_name%> Wins! </p>
<%end%>